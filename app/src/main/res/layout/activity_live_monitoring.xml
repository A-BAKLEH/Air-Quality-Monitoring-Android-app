                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_baseline_info_24"
                        app:tint="#30336b" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#dcdde1"/>

            </LinearLayout>

